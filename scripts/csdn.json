{
  "key": "csdn",
  "name": "CSDN",
  "type": "开发者",
  "url": "https://blog.csdn.net/",
  "logoUrl": "",
  "puppeteerScripts": {
    "processor": [],
    "version": "1.0.15",
    "login": [
      {
        "key": "cookieAuthPassKey",
        "val": "UserToken"
      }
    ],
    "configSchema": {
      "type": "object",
      "displayType": "row",
      "showDescIcon": true,
      "column": 1,
      "properties": {
        "mode": {
          "title": "文章编辑器",
          "default": "md",
          "required": true,
          "disabled": false,
          "readOnly": false,
          "hidden": false,
          "enum": [
            "md",
            "rich"
          ],
          "enumNames": [
            "Markdown",
            "富文本"
          ],
          "type": "string",
          "widget": "select"
        },
        "type": {
          "title": "文章类型",
          "default": "",
          "required": true,
          "disabled": false,
          "readOnly": false,
          "hidden": false,
          "enum": [],
          "enumNames": [],
          "type": "string",
          "widget": "select"
        },
        "debug": {
          "title": "是否打开渠道窗口",
          "description": "勾选则显示发布流程",
          "default": false,
          "required": false,
          "disabled": false,
          "readOnly": false,
          "hidden": false,
          "type": "boolean",
          "widget": "checkbox"
        }
      }
    },
    "configProcessing": [
      {
        "key": "publishUrl",
        "val": "https://editor.csdn.net/md/?not_checkout=1"
      },
      {
        "key": "publishConfig",
        "val": "\n      async function initFrom() {\n  // 打开发布文章\n  document.querySelector('.btn-publish').click();\n  // 等待打开\n  await new Promise((res) => {\n    setTimeout(() => {\n      res();\n    }, 500);\n  });\n  // 获取配置\n  const resp = eval({\n    type: [...document.querySelectorAll(`.textfield>option`)].reduce((acc, o) => {\n      return { ...acc, [o.innerText]: o.innerText };\n    }, {}),\n  });\n  const groupsEnum = Object.keys(resp.type).map((o) => o);\n  const type = {};\n  type.enum = groupsEnum;\n  type.enumNames = Object.values(resp.type);\n  type.default = groupsEnum[0];\n  return { type: type };\n}\n      initFrom()\n    "
      }
    ],
    "draft": [
      {
        "name": "跳转页面",
        "runs": [
          {
            "fn": "gotoUrl",
            "props": {
              "url": "https://editor.csdn.net/md/?not_checkout=1"
            }
          }
        ]
      },
      {
        "name": "发布内容",
        "runs": [
          {
            "fn": "pastes",
            "props": {
              "groups": [
                {
                  "key": "//input[contains(@class,'article-bar__title article-bar__title--input')]",
                  "val": "{{this.body.title}}"
                },
                {
                  "key": ".editor__inner",
                  "val": "{{this.body.content}}"
                }
              ]
            }
          }
        ]
      },
      {
        "name": "保存草稿",
        "only": true,
        "runs": [
          {
            "fn": "clicks",
            "props": {
              "ids": [
                "//button[text()[normalize-space()='保存草稿']]"
              ]
            }
          }
        ]
      }
    ],
    "publish": [
      {
        "name": "等待初始化",
        "runs": [
          {
            "fn": "wait",
            "props": {
              "time": 1000
            }
          }
        ]
      },
      {
        "name": "打开发布界面",
        "runs": [
          {
            "fn": "clicks",
            "props": {
              "ids": [
                "//button[text()[normalize-space()='发布文章']]"
              ]
            }
          }
        ]
      },
      {
        "name": "选择文章类型",
        "runs": [
          {
            "fn": "select",
            "props": {
              "id": ".textfield",
              "value": "{{this.body.type}}"
            }
          }
        ]
      }
    ],
    "draftRich": [],
    "publishRich": [],
    "cleanDraft": [],
    "openDraft": [
      {
        "name": "跳转草稿地址",
        "runs": [
          {
            "fn": "gotoUrl",
            "props": {
              "url": "https://mp.csdn.net/mp_blog/manage/article"
            }
          }
        ]
      }
    ]
  }
}
