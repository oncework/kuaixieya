{
  "key": "juejin",
  "name": "掘金",
  "type": "开发者",
  "url": "https://juejin.cn/",
  "logoUrl": "",
  "puppeteerScripts": {
    "processor": [],
    "version": "1.0.13",
    "login": [
      {
        "name": "登录后校验认证",
        "key": "evalAuthPassKey",
        "val": "!!document.querySelector('.login-button')"
      },
      {
        "name": "第三方验证跳转回调凭证值",
        "key": "redirectKey",
        "val": "https://juejin.cn/oauth-result?new_connect"
      }
    ],
    "configSchema": {
      "type": "object",
      "displayType": "row",
      "showDescIcon": true,
      "column": 1,
      "properties": {
        "mode": {
          "title": "文章编辑器",
          "default": "md",
          "required": true,
          "disabled": false,
          "readOnly": false,
          "hidden": false,
          "enum": [
            "md",
            "rich"
          ],
          "enumNames": [
            "Markdown",
            "富文本"
          ],
          "type": "string",
          "widget": "select"
        },
        "coverUrl": {
          "title": "上传封面大图",
          "type": "string",
          "widget": "LocalPicPreview"
        },
        "classify": {
          "title": "分类",
          "required": false,
          "disabled": false,
          "readOnly": false,
          "hidden": false,
          "enum": [],
          "enumNames": [],
          "type": "string",
          "widget": "select"
        },
        "label": {
          "title": "添加标签",
          "default": "前端",
          "required": false,
          "disabled": false,
          "readOnly": false,
          "hidden": false,
          "props": {
            "allowClear": false
          },
          "type": "string"
        },
        "debug": {
          "title": "是否显示发布流程",
          "description": "勾选则显示发布流程",
          "default": false,
          "required": false,
          "disabled": false,
          "readOnly": false,
          "hidden": false,
          "type": "boolean",
          "widget": "checkbox"
        }
      }
    },
    "configProcessing": [
      {
        "name": "配置地址",
        "key": "publishUrl",
        "val": "https://juejin.cn/editor/drafts/new?v=2"
      },
      {
        "name": "配置相关动作",
        "key": "publishConfig",
        "val": "function test() {\n      const resp = eval({classify: [...document.querySelectorAll('.category-list>div')].reduce((acc, o) => { return { ...acc, [o.innerText]: o.innerText }}, {}),})\n      const groupsEnum = Object.keys(resp.classify).map((o) => o);\n      const classify = {};\n      classify.enum = groupsEnum;\n      classify.enumNames = Object.values(resp.classify);\n      classify.default = groupsEnum[0];\n      return { classify: classify }\n    }\n\n    test()"
      }
    ],
    "draft": [
      {
        "name": "跳转页面",
        "runs": [
          {
            "fn": "gotoUrl",
            "props": {
              "url": "https://juejin.cn/editor/drafts/new?v=2"
            }
          }
        ]
      },
      {
        "name": "检测当前是否markdown编辑器",
        "runs": [
          {
            "fn": "has",
            "props": {
              "id": "//input[@class='title-input title-input']"
            }
          },
          {
            "fn": "clicks",
            "props": {
              "ids": [
                ".header > .header-content > .editor-switcher > .toggle-btn > .ion-ios-more",
                ".rich-text-editor > .header > .header-content > .editor-switcher > .panel",
                ".editor-switcher > .confirm-dialog-box > .confirm-dialog > .dialog-footer > .confirm-btn"
              ]
            }
          }
        ]
      },
      {
        "name": "发布内容",
        "runs": [
          {
            "fn": "pastes",
            "props": {
              "groups": [
                {
                  "key": "#juejin-web-editor > .edit-draft > .markdown-editor > .header > .title-input",
                  "val": "{{this.body.title}}"
                },
                {
                  "key": ".bytemd > .bytemd-body > .bytemd-editor > .CodeMirror > .CodeMirror-scroll",
                  "val": "{{this.body.content}}"
                }
              ]
            }
          },
          {
            "fn": "disappear",
            "props": {
              "id": ".image-upload-progress-panel"
            }
          }
        ]
      },
      {
        "name": "打开发布",
        "runs": [
          {
            "fn": "clicks",
            "props": {
              "ids": [
                "//button[text()=\" 发布 \"]"
              ]
            }
          }
        ]
      },
      {
        "name": "选择分类",
        "runs": [
          {
            "fn": "clicks",
            "props": {
              "ids": [
                "//div[text()=\"{{this.body.classify}}\"]"
              ]
            }
          }
        ]
      },
      {
        "name": "添加标签",
        "runs": [
          {
            "fn": "clicks",
            "props": {
              "ids": [
                "//div[text()[normalize-space()='请搜索添加标签']]",
                "//li[text()[normalize-space()='{{this.body.label}}']]",
                "//div[text()[normalize-space()='发布文章']]"
              ]
            }
          }
        ]
      },
      {
        "name": "上传封面",
        "runs": [
          {
            "fn": "uploadPic",
            "props": {
              "selectId": ".publish-popup input[type=file]",
              "url": "{{this.body.coverUrl}}",
              "picId": ".preview-image[src^=\"https\"]"
            }
          }
        ]
      }
    ],
    "publish": [
      {
        "name": "确认发布",
        "runs": [
          {
            "fn": "clicks",
            "props": {
              "ids": [
                "//button[text()[normalize-space()='确定并发布']]"
              ]
            }
          }
        ]
      }
    ],
    "draftRich": [],
    "publishRich": [],
    "cleanDraft": [
      {
        "name": "跳转草稿地址",
        "runs": [
          {
            "fn": "gotoUrl",
            "props": {
              "url": "https://juejin.cn/editor/drafts"
            }
          }
        ]
      },
      {
        "name": "查看是否有更多草稿",
        "runs": [
          {
            "fn": "has",
            "props": {
              "id": "//li[1]/div[@class='draft' and 1]/div[@class='info-box' and 1]/div[@class='menu ion-ios-more' and 2]",
              "type": "stop"
            }
          }
        ]
      },
      {
        "name": "删除草稿",
        "runs": [
          {
            "fn": "clicks",
            "props": {
              "ids": [
                ".list > .item:nth-child(1) > .draft > .info-box > .menu",
                ".item:nth-child(1) > .draft > .info-box > .menu > .menu-list > .item:nth-child(2)",
                ".draft > .confirm-dialog-box > .confirm-dialog > .dialog-footer > .confirm-btn"
              ]
            }
          }
        ]
      },
      {
        "name": "继续循环删除",
        "runs": [
          {
            "fn": "cleanDraft"
          }
        ]
      }
    ],
    "openDraft": [
      {
        "name": "跳转草稿地址",
        "runs": [
          {
            "fn": "gotoUrl",
            "props": {
              "url": "https://juejin.cn/editor/drafts"
            }
          }
        ]
      }
    ]
  }
}
