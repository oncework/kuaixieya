{
  "key": "zhihu",
  "name": "知乎",
  "type": "通用类",
  "url": "https://www.zhihu.com",
  "logoUrl": "",
  "puppeteerScripts": {
    "processor": [],
    "version": "1.0.11",
    "login": [
      {
        "key": "cookieAuthPassKey",
        "val": "z_c0"
      }
    ],
    "configSchema": {
      "type": "object",
      "displayType": "row",
      "showDescIcon": true,
      "column": 1,
      "properties": {
        "mode": {
          "title": "文章编辑器",
          "default": "rich",
          "required": true,
          "disabled": false,
          "readOnly": false,
          "hidden": false,
          "enum": [
            "md",
            "rich"
          ],
          "enumNames": [
            "Markdown",
            "富文本"
          ],
          "type": "string",
          "widget": "select"
        },
        "debug": {
          "title": "是否显示发布流程",
          "description": "勾选则显示发布流程",
          "default": false,
          "required": false,
          "disabled": false,
          "readOnly": false,
          "hidden": false,
          "type": "boolean",
          "widget": "checkbox"
        }
      }
    },
    "configProcessing": [
      {
        "key": "publishUrl",
        "val": "https://zhuanlan.zhihu.com/write"
      },
      {
        "key": "publishConfig",
        "val": "function test() {\n        const resp = eval({classify: [...document.querySelectorAll('.category-list>div')].reduce((acc, o) => { return { ...acc, [o.innerText]: o.innerText }}, {}),})\n        const groupsEnum = Object.keys(resp.classify).map((o) => o);\n        const classify = {};\n        classify.enum = groupsEnum;\n        classify.enumNames = Object.values(resp.classify);\n        classify.default = groupsEnum[0];\n        return { classify: classify }\n      }\n  \n      test()"
      }
    ],
    "draft": [],
    "publish": [],
    "draftRich": [
      {
        "name": "跳转页面",
        "runs": [
          {
            "fn": "gotoUrl",
            "props": {
              "url": "https://zhuanlan.zhihu.com/write"
            }
          }
        ]
      },
      {
        "name": "发布内容",
        "runs": [
          {
            "fn": "pastes",
            "props": {
              "groups": [
                {
                  "key": "//textarea[@class='Input']",
                  "val": "{{this.body.title}}"
                },
                {
                  "key": ".DraftEditor-root",
                  "val": "{{this.body.content}}"
                }
              ]
            }
          }
        ]
      }
    ],
    "publishRich": [],
    "cleanDraft": [],
    "openDraft": []
  }
}
